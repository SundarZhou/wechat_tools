/* pages/mine/mine.wxss */

.head_login {
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 500rpx;
  overflow: hidden;
  background-color: #09abf7;
}

.head {
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: transparent;
}

.head::after {
  border: none;
}

.head_img {
  width: 180rpx;
  height: 180rpx;
  margin-bottom: 30rpx;
  border-radius: 50%;
}

.click_login {
  font-size: 32rpx;
  color: #fff;
}

.mess {
  display: flex;
  flex-direction: column;
  padding: 0 40rpx;
  margin-top: 60rpx;
  background-color: #fff;
}

.mine_mess {
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 36rpx 0;
  border-bottom: 1px solid #eee;
}

.left {
  display: flex;
  align-items: center;
}

.mine_mess:last-child {
  border: none;
}

.mine_mess image {
  width: 50rpx;
  height: 40rpx;
}

.mine_mess text {
  margin-left: 20rpx;
  font-size: 28rpx;
  color: #686868;
}

button[disabled]:not([type]) {
  background-color: transparent;
}
