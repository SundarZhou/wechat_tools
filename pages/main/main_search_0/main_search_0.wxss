/* pages/main/main_search/main_search.wxss */
@import "../main_templat/main_templat";

page {
  background-color: #fff;
}

.search_content {
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  margin-top: 60rpx;
}

.content {
  display: flex;
  flex-direction: column;
  align-content: center;
  justify-content: center;
  padding: 22rpx;
  margin-bottom: 60rpx;
  background-color: #eee;
  border-radius: 8px;
}

.search_content text {
  text-align: center;
  margin-bottom: 20rpx;
  color: #686868;
}

.content_title {
  font-size: 40rpx;
  font-weight: 700;
}

.content_author {
  display: flex;
  justify-content: center;
  font-size: 30rpx;
  font-weight: 500;
}

.label_explanation, .content_content, .content_explanation,
.content_appreciation {
  font-size: 28rpx;
}

.search_content .content_explanation, .search_content .content_appreciation {
  text-align: left;
  line-height: 20px;
  letter-spacing: 2px;
}

.service_error {
  font-size: 26rpx;
  font-weight: 500;
  color: #1a1a1a;
}

.label_explanation {
  color: #1a1a1a;
  margin-bottom: 20rpx;
}
