/* pages/main/main.wxss */
.main {
  padding-bottom: 30rpx;
}

.banner {
  width: 100%;
  height: 380rpx;
}

.banner image {
  width: 100%;
  height: 100%;
}

.GJ_type{
  display: flex;
  flex-direction: row;
  align-items: center;
  flex-wrap: wrap;
  width: 92%;
  margin: 30rpx auto 0;
  background-color: #fff;
  border-radius: 8px;
}

.type {
  display: flex;
  flex-direction: column;
  align-items: center;
  width: 25%;
  padding: 60rpx 0;
}

.type_img {
  width: 70rpx;
  height: 70rpx;
  margin-bottom: 20rpx;
}

.type_contents {
  font-size: 24rpx;
  color: #666;
}

page {
  position: relative;
}

.imgshow {
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0;
  top: 0;
  background-color: #000;
}

.imgshow image {
  position: absolute;
  top: 50%;
  transform: translateY(-50%);
  width: 100%;
}

.show {
  display: block;
}

.hide {
  display: none;
}